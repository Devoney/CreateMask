<Window x:Class="CreateMask.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:CreateMask.Gui.Controls"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow"
        SizeToContent="Height"
        Height="450"
        Width="560"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Background="Black">
    <Window.Resources>
        <Style TargetType="GroupBox" BasedOn="{StaticResource GroupBoxStyle}">
            <Setter Property="Margin"
                    Value="4" />
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   FontWeight="Bold" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type TextBox}"
               BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="Margin"
                    Value="4,4,0,0"></Setter>
        </Style>
        <Style TargetType="{x:Type Button}"
               BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Margin"
                    Value="4,4,0,0"></Setter>
        </Style>
        <Style TargetType="{x:Type xctk:IntegerUpDown}">
            <Setter Property="Margin"
                    Value="4,4,0,0"></Setter>
            <Setter Property="Background" Value="{StaticResource TextBoxBackgroundBrush}" />
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="1"
                  Header="Measurement Dimensions">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Content="Number of rows" />
                <xctk:IntegerUpDown Grid.Column="1"
                                    Value="{Binding Arguments.MeasurementsNrOfRows}"
                                    Minimum="1" />
                <Label Grid.Column="2"
                       Content="Number of columns" />
                <xctk:IntegerUpDown Grid.Column="3"
                                    Value="{Binding Arguments.MeasurementsNrOfColumns}"
                                    Minimum="1" />
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="2"
                  Header="Measurements">
            <StackPanel>
                <controls:SelectFile Label="LDR Curve Data"
                                     SelectedFilePath="{Binding Arguments.LdrCalibrationFilePath, Mode=TwoWay}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Content="Low Mask Intensity" />
                    <xctk:IntegerUpDown Grid.Column="1"
                                        Value="{Binding Arguments.Low}"
                                        Minimum="0"
                                        Maximum="255" />
                    <Label Grid.Column="2"
                           Content="High Mask Intensity" />
                    <xctk:IntegerUpDown Grid.Column="3"
                                        Value="{Binding Arguments.High}"
                                        Minimum="0"
                                        Maximum="255" />
                </Grid>
                <controls:SelectFile Label="LCD Measurements High"
                                     SelectedFilePath="{Binding Arguments.LcdMeasurementsFilePathHigh, Mode=TwoWay}" />
                <controls:SelectFile Label="LCD Measurements Low"
                                     SelectedFilePath="{Binding Arguments.LcdMeasurementsFilePathLow, Mode=TwoWay}" />
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Row="3"
                  Header="LCD Dimensions (pixels)">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                       Content="Width" />
                <xctk:IntegerUpDown Grid.Column="1"
                                    Value="{Binding Arguments.LcdWidth}" />
                <Label Grid.Column="2"
                       Content="Height" />
                <xctk:IntegerUpDown Grid.Column="3"
                                    Value="{Binding Arguments.LcdHeight}" />
            </Grid>
        </GroupBox>
        <GroupBox Header="Output"
                  Grid.Row="4">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*" />
                        <ColumnDefinition Width="0.25*" />
                        <ColumnDefinition Width="0.35*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Content="Desired overall resistance" />
                    <xctk:IntegerUpDown Grid.Column="1"
                                        Value="{Binding Arguments.DesiredResistance}" Minimum="0" Maximum="255" />
                </Grid>
                <controls:SelectFile
                    Label="Save mask file path"
                                     SelectedFilePath="{Binding Arguments.MaskFilePath}" />
                <Button
                    Height="40"
                        Click="BtnCreateMask_OnClick">Create Mask</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
