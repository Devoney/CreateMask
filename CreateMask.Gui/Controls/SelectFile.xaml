<UserControl x:Class="CreateMask.Gui.Controls.SelectFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CreateMask.Gui.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300"
             x:Name="SelectFileUserControl">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85*"></ColumnDefinition>
            <ColumnDefinition Width="15*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Grid.Column="0"
               Content="{Binding Path=Label}" />
        <TextBox x:Name="tbxFilePath"
                 Grid.Row="1"
                 Grid.Column="0"
                 Text="{Binding Path=SelectedFilePath}"
                 VerticalAlignment="Center" />
        <Button Grid.Row="1"
                Grid.Column="1"
                Content="Browse"
                Click="BrowseClick" />
    </Grid>
</UserControl>
